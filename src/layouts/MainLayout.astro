---
import BaseHead from "@/components/BaseHead.astro";
import NavBar from "@/components/NavBar.astro";
import Footer from "@/sections/Footer.astro";
import ButtonScroll from "@/components/ButtonScroll.astro";
import { ClientRouter } from "astro:transitions";

const { title, description, image = "/open-graph-reolcode.jpg" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <script is:inline>
      // Inicialización segura de tema para evitar parpadeo
      try {
        const getInitialTheme = () => {
          try {
            if (
              typeof localStorage !== "undefined" &&
              localStorage.getItem("theme")
            ) {
              const savedTheme = localStorage.getItem("theme");
              if (savedTheme === "dark" || savedTheme === "light") {
                return savedTheme;
              }
            }
          } catch (error) {
            console.warn("Error al acceder a localStorage:", error);
          }

          try {
            if (
              window.matchMedia &&
              window.matchMedia("(prefers-color-scheme: dark)").matches
            ) {
              return "dark";
            }
          } catch (error) {
            console.warn("Error al verificar preferencia del sistema:", error);
          }

          return "light";
        };

        const theme = getInitialTheme();

        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      } catch (error) {
        console.error("Error en inicialización de tema:", error);
        // Fallback seguro
        document.documentElement.classList.remove("dark");
      }
    </script>

    <ClientRouter />
  </head>
  <body>
    <header>
      <NavBar />
    </header>

    <slot />

    <Footer />

    <!-- Botón de Scroll con Progreso -->
    <ButtonScroll />

    <!-- Scripts principales -->
    <script>
      import "../scripts/main.js";
    </script>
  </body>
</html>
