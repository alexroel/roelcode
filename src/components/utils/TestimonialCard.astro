---
import { Icon } from "astro-icon/components";

export interface Props {
  name: string;
  description: string;
  calification: number;
  userIcon?: string;
  iconQuote?: string;
  class?: string;
}

const {
  name,
  description,
  calification,
  userIcon = "user",
  iconQuote = "quote",
  class: className = "",
} = Astro.props;

// Generar estrellas basadas en la calificaciÃ³n
const stars = Array.from({ length: 5 }, (_, i) => i < calification);
---

<div class={`bg-white dark:bg-slate-800 rounded-xl p-6 shadow-lg border border-slate-200 dark:border-slate-700 hover:shadow-xl transition-all duration-300 ${className}`}>
  <!-- Quote Icon -->
  <div class="flex justify-start mb-4">
    <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/20 rounded-full flex items-center justify-center">
      <Icon
        name={iconQuote}
        class="h-5 w-5 text-blue-600 dark:text-blue-400"
      />
    </div>
  </div>
  
  <!-- Testimonial Text -->
  <blockquote class="text-slate-700 dark:text-slate-300 mb-6 leading-relaxed">
    "{description}"
  </blockquote>
  
  <!-- Rating Stars -->
  <div class="flex items-center mb-4">
    {stars.map((filled) => (
      <Icon
        name={filled ? "star" : "star"}
        class={`h-4 w-4 ${filled ? "text-yellow-400" : "text-slate-300 dark:text-slate-600"}`}
      />
    ))}
  </div>
  
  <!-- User Info -->
  <div class="flex items-center">
    <div class="w-10 h-10 bg-slate-100 dark:bg-slate-700 rounded-full flex items-center justify-center mr-3">
      <Icon
        name={userIcon}
        class="h-5 w-5 text-slate-600 dark:text-slate-400"
      />
    </div>
    <div>
      <div class="font-semibold text-slate-900 dark:text-white">
        {name}
      </div>
      <div class="text-sm text-slate-500 dark:text-slate-400">
        Estudiante de Udemy
      </div>
    </div>
  </div>
</div>