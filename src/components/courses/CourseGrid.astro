---
import type { UdemyCourse } from "@/data/udemy-courses";
import CourseCard from "@/components/courses/CourseCard.astro";

interface Props {
  courses: UdemyCourse[];
  showAll?: boolean;
}

const { courses, showAll = true } = Astro.props;
const displayCourses = showAll ? courses : courses.slice(0, 6);
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
  {displayCourses.map((course) => <CourseCard course={course} />)}
</div>

{
  !showAll && courses.length > 6 && (
    <div class="mt-8 text-center">
      <a
        href="/cursos"
        class="inline-flex items-center px-6 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-medium rounded-lg transition-colors duration-200"
      >
        Ver todos los cursos
        <svg
          class="ml-2 w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </a>
    </div>
  )
}
