---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';


interface Props {
    course: CollectionEntry<'courses'>;
}

const { course } = Astro.props;
const content = course.data;

import logoUdemy from "@/assets/logos/logo-udemy.webp";
import { Icon } from 'astro-icon/components';
---

<div class="relative rounded-lg border border-slate-400 flex flex-col card">
    {
        content.new && (
            <div class:list={[
                "absolute top-2 start-2 bg-emerald-500 text-slate-100",
                "rounded-md py-1 px-3 z-10"
            ]}>
                <p class="font-semibold pb-1 m-0">Nuevo</p>
            </div>
        )
    }

    {
        content.popular && (
            <div class:list={[
                "absolute top-2 start-2 bg-yellow-500 text-slate-900",
                "rounded-md py-1 px-3 z-10"
            ]}>
                <p class="font-semibold pb-1 m-0">Popular</p>
            </div>
        )
    }
    <a href={ `/courses/${ course.slug }` }>
        <Image src={ content.image } alt="Imagen de Cursos" class="curso-img" transition:name={`${course.slug}-image`}/>
    </a>
    
    <div class="p-3 grid card-body h-full place-content-between">
        <div class="grid h-full">
            <a href={ `/courses/${ course.slug }` } class="hover:text-emerald-700">
                <h5 class="text-xl font-semibold m-0">{ content.title }</h5>
            </a>
            <!-- <p class="text-slate-600 my-2">{ content.description }</p> -->
            <p class="flex items-center mt-2">
                <span class="font-semibold">{content.qualification}</span>
                <span class="flex mx-1 text-lg text-yellow-600">
                    {
                        new Array(4).fill(0).map((_) => (
                            <Icon name="star-icon" size={20} class="text-yellow-600"/>
                        ))
                    }
                    <Icon name="star-half-icon" size={20} class="text-yellow-600"/>
                </span>
                <span class="text-slate-600">({content.qualifications})</span>
            </p>
            <p class="mb-2 text-slate-600">{ content.hours } horas de {content.class} clases</p>
        </div>
        <div class="grid grid-cols-2 gap-4">
            <a href={ `/courses/${ course.slug }` } 
            class:list={[
                "flex items-center justify-center gap-2 bg-emerald-500 text-slate-100",
                "rounded-lg py-1 px-3 hover:bg-emerald-600",
                "font-semibold"
            ]}>
                Leer MÃ¡s
            </a>
            <a href={ content.url } target="_blank" class:list={[
                "flex items-center justify-center gap-2 text-purple-700",
                "rounded-lg py-1 px- border-2 border-purple-700 hover:bg-purple-700 hover:text-slate-100",
                "font-semibold",
                "btn-udemy"
            ]}>
                <Image src={ logoUdemy } alt="" class="logo-udemy"/>
                <span>Tomar curso</span>
            </a>
        </div>
    </div>
</div>


<style>
    .curso-img{
        height: auto;
        transition: all 0.5s ease;
    }

    .logo-udemy{
        height: auto;
        width: 30px;
    }

    .card{
        overflow: hidden;
        transition: all 0.5s ease;
    }

    .card:hover{
        box-shadow: 0 0 0.5rem #64748b;
    }

    .card:hover .curso-img{
        transform: scale(1.05);
        
    }

    .btn-udemy{
        transition: all 0.5s ease;
    }

    .btn-udemy:hover{
        background-color: #A435F0;
    }

</style>
