---
import { Icon } from "astro-icon/components";
import SocialLinks from "@/components/utils/SocialLinks.astro";
import ModeToggle from "@/components/utils/ModeToggle.astro";

import logoRC from "@/assets/logo-roelcode.svg";
import { Image } from "astro:assets";

// Lista de navegaci√≥n
const navigationItems = [
  { name: "Inicio", link: "/", external: false },
  { name: "Cursos", link: "/cursos", external: false },
  { name: "Acerca de", link: "/acerca-de", external: false },
  {
    name: "Udemy",
    link: "https://www.udemy.com/user/alex-roel/",
    external: true,
  },
];
---

<header
  class="bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-700 sticky top-0 z-50"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2">
          <Image src={logoRC} alt="RoelCode" class="h-8 w-auto" />
          <span class="text-xl font-bold text-slate-900 dark:text-white"
            >RoelCode</span
          >
        </a>
      </div>

      <!-- Desktop Navigation (solo en pantallas grandes) -->
      <nav class="hidden lg:flex space-x-8">
        {
          navigationItems.map((item) => (
            <a
              href={item.link}
              target={item.external ? "_blank" : "_self"}
              class="text-slate-700 dark:text-slate-300 hover:text-emerald-500 dark:hover:text-emerald-400 px-3 py-2 text-sm font-medium transition-colors"
            >
              {item.name}
            </a>
          ))
        }
      </nav>

      <!-- Right side: Theme toggle + Social links + Mobile menu -->
      <div class="flex items-center space-x-4">
        <!-- Theme Toggle -->
        <ModeToggle />

        <!-- Social Links (solo en desktop) -->
        <div class="hidden lg:flex">
          <SocialLinks variant="header" />
        </div>

        <!-- Mobile menu button (visible desde tablet) -->
        <button
          id="mobile-menu-button"
          class="lg:hidden p-2 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
        >
          <Icon name="menu" class="h-6 w-6" />
        </button>
      </div>
    </div>

    <!-- Mobile Navigation (visible desde tablet) -->
    <div
      id="mobile-menu"
      class="lg:hidden hidden border-t border-slate-200 dark:border-slate-700"
    >
      <div class="px-2 pt-2 pb-3 space-y-1">
        {
          navigationItems.map((item) => (
            <a
              href={item.link}
              target={item.external ? "_blank" : "_self"}
              class="block px-3 py-2 text-base font-medium text-slate-700 dark:text-slate-300 hover:text-emerald-500 dark:hover:text-emerald-400 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-md transition-colors"
            >
              {item.name}
            </a>
          ))
        }

        <!-- Mobile Social Links -->
        <div class="pt-4 border-t border-slate-200 dark:border-slate-700 mt-4">
          <SocialLinks variant="mobile" />
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu functionality
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });
</script>
