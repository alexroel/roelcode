---
import { Icon } from "astro-icon/components";

interface Props {
  currentLesson: number;
  totalLessons: number;
  courseName: string;
}

const { currentLesson, totalLessons, courseName } = Astro.props;
const progress = (currentLesson / totalLessons) * 100;
---

<div
  class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4 mb-6"
>
  <div class="flex items-center justify-between mb-3">
    <h3 class="text-sm font-semibold text-gray-900 dark:text-white">
      Progreso del curso
    </h3>
    <span class="text-sm text-gray-600 dark:text-gray-400">
      {currentLesson} de {totalLessons}
    </span>
  </div>

  <!-- Barra de progreso -->
  <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2 mb-3">
    <div
      class="bg-blue-600 h-2 rounded-full transition-all duration-300"
      style={`width: ${progress}%`}
    >
    </div>
  </div>

  <!-- Porcentaje -->
  <div class="flex items-center justify-between text-xs">
    <span class="text-gray-600 dark:text-gray-400">
      {Math.round(progress)}% completado
    </span>
    {
      progress === 100 && (
        <div class="flex items-center gap-1 text-green-600 dark:text-green-400">
          <Icon name="tabler:check-circle" class="w-4 h-4" />
          <span class="font-medium">¡Completado!</span>
        </div>
      )
    }
  </div>
</div>

<!-- Siguiente lección recomendada -->
{
  progress < 100 && (
    <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mb-6">
      <div class="flex items-center gap-3">
        <div class="flex-shrink-0">
          <Icon
            name="tabler:lightbulb"
            class="w-5 h-5 text-blue-600 dark:text-blue-400"
          />
        </div>
        <div>
          <h4 class="text-sm font-medium text-blue-900 dark:text-blue-100 mb-1">
            Continúa aprendiendo
          </h4>
          <p class="text-xs text-blue-700 dark:text-blue-300">
            ¡Vas muy bien! Sigue con la siguiente lección para completar el
            curso.
          </p>
        </div>
      </div>
    </div>
  )
}
