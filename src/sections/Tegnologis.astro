---
import { Icon } from "astro-icon/components";

const TegnologisInfo = [
  {
    name: "Golang",
    icon: "golang",
    color: "text-cyan-600",
    bgColor: "bg-cyan-100",
  },
  {
    name: "Python",
    icon: "python",
    color: "text-blue-500",
    bgColor: "bg-blue-100",
  },
  {
    name: "JavaScript",
    icon: "javascript",
    color: "text-yellow-400",
    bgColor: "bg-yellow-100",
  },

  {
    name: "Java",
    icon: "java",
    color: "text-red-600",
    bgColor: "bg-red-100",
  },
  {
    name: "HTML",
    icon: "html",
    color: "text-orange-600",
    bgColor: "bg-orange-100",
  },
  {
    name: "CSS",
    icon: "css",
    color: "text-blue-600",
    bgColor: "bg-blue-100",
  },
  {
    name: "Flask",
    icon: "flask",
    color: "text-gray-600",
    bgColor: "bg-gray-100",
  },
];
---

<div class="max-w-7xl mx-auto px-4">
  <div class="text-center mb-16">
    <h2 class="text-4xl font-bold text-gray-900 mb-4">
      Tecnologías que Enseño
    </h2>
    <p class="text-xl text-gray-600 max-w-3xl mx-auto">
      Aprende las tecnologías más demandadas en el mercado laboral actual
    </p>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
    {
      TegnologisInfo.map((tech) => (
        <div
          class={`text-center p-6 bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow`}
        >
          <div
            class={`w-16 h-16 mx-auto mb-4 ${tech.bgColor} rounded-full flex items-center justify-center`}
          >
            <Icon name={tech.icon} class={`w-10 h-10 ${tech.color}`} />
          </div>
          <h3 class="font-semibold text-gray-900">{tech.name}</h3>
        </div>
      ))
    }
  </div>
</div>
