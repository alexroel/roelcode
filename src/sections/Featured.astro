---
import { Image } from "astro:assets";

import coursesImage from "@/assets/images/certificate.png";
// import instructorImage from "@/assets/images/instructor.png";
import studentImage from "@/assets/images/students.png";
import ratingImage from "@/assets/images/calification.png";


const featured = [
    {
        title: "Cursos certificados",
        description: "Cursos certificados por Udemy para todos los niveles.",
        image: coursesImage,
    },
    // {
    //     title: "Instructor experto",
    //     description: "Con más de 10 años de experiencia en enseñanza y aprendizaje de software.",
    //     image: instructorImage,
    // },
    {
        title: "Estudiantes",
        description: "Impartido en línea a más de 150.000 mil estudiantes en linea en Udemy.",
        image: studentImage,
    },
    {
        title: "Calificación",
        description: "Más de 10.000 calificaciones con una puntuación promedio de 4.7 estrellas.",
        image: ratingImage,
    },
]
---


<section class="bg-gray-200 dark:bg-gray-900 py-5 lg:py-28 featured">
    <div class="2xl:container mx-auto p-3">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 xl:gap-20">
            {
                featured.map((item) => (
                    <div class="flex gap-4 items-start border-l-4 border-teal-500 border-dotted ps-5">
                        <Image src={item.image} alt={item.title} class="w-28 h-auto"/>
                        <div class="">
                            <h3 class="text-2xl text-gray-950 dark:text-gray-100 font-semibold mb-2">{item.title}</h3>
                            <p class="text-gray-900 dark:text-gray-200">{item.description}</p>
                        </div>
                    </div>
                ))
            }
                        
    </div>
</section>




