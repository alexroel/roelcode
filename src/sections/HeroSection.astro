---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<section
  class="bg-gradient-to-br from-gray-900 via-gray-800 to-emerald-900 text-white py-20"
>
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
        Aprende <span class="text-emerald-400">Programación</span><br />
        y <span class="text-emerald-300">Desarrollo Web</span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto">
        {SITE_DESCRIPTION}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/cursos-udemy"
          class="px-8 py-4 bg-emerald-600 hover:bg-emerald-700 text-white font-bold rounded-lg transition-colors text-lg"
        >
          Ver Cursos
        </a>
        <a
          href="/about"
          class="px-8 py-4 border-2 border-white hover:bg-white hover:text-emerald-900 text-white font-bold rounded-lg transition-colors text-lg"
        >
          Conóceme
        </a>
      </div>
    </div>
  </div>
</section>
